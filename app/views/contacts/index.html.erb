<p id="notice"><%= notice %></p>

<div class="p-20 bg-backgroundlightgray">
  <div class="border shadow p-10 bg-white">
    <div class="flex justify-between mb-8 items-center">
      <div class="text-2xl font-bold">Contacts</div>
      <%= link_to 'Add Contact', new_contact_path, class:"px-3 py-2 border hover:text-gray-500" %>
    </div>

    <table width=100%>
      <thead class="border-b-2 border-t-2">
        <tr class="text-left w-full">
          <th>Name</th>
          <th>Organization</th>
          <th>Email address</th>
          <th>Phone number</th>
          <th>Delete contact</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= link_to contact.full_name, contact, class:"font-bold text-blue-700 underline hover:text-blue-500" %></td>
            <td><%= contact.organization %></td>
            <td><%= contact.email_home %></td>
            <td><%= contact.phone_home %></td>    
            <td><%= link_to 'Delete', contact, class:"text-red-600 px-1 py-1 border hover:text-red-800", method: :delete, data: { confirm: 'Are you sure?' } %></td>     
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>