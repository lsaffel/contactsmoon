<p id="notice"><%= notice %></p>

<div class="p-20 bg-backgroundlightgray">
  <div class="border shadow p-10 bg-white">
    <div class="flex justify-between mb-8 items-center">
      <div class="text-2xl font-bold">Contacts</div>
      <%= link_to 'Add Contact', new_contact_path, class:"px-4 py-2 border" %>
    </div>

    <table width=100%>
      <thead class="border-b-2 border-t-2">
        <tr class="text-left w-full">
          <th>Name</th>
          <th>Organization</th>
          <th>Email address</th>
          <th>Phone number</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= link_to contact.full_name, contact, class:"underline hover:text-gray-500" %></td>
            <td><%= contact.organization %></td>
            <td><%= contact.email_home %></td>
            <td><%= contact.phone_home %></td>


            <!— show edit destroy links were here —!>

              
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>