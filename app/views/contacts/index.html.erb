<p id="notice"><%= notice %></p>

<div class="p-20">
  <div class="border shadow p-10">
    <div class="flex justify-between">
      <div class="text-3xl">Contacts</div>
      <%= link_to 'Add Contact', new_contact_path, class:"px-4 py-2 border" %>
    </div>

    <table width=100%>
      <thead width=100%>
        <tr>
          <th>Name</th>
          <th>Organization</th>
          <th>Email address</th>
          <th>Phone number</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.full_name %></td>
            <td><%= contact.organization %></td>
            <td><%= contact.email_home %></td>
            <td><%= contact.phone_home %></td>
            <td><%= link_to 'Show', contact %></td>
            <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
            <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>